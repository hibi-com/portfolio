{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "rootDir": "./src",
        "typeRoots": ["../../node_modules/@types"],
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
