{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/base.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "paths": {
            "~/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "target": "ESNext"
    },
    "exclude": ["node_modules", "build", "dist", "astro.config.ts"],
    "include": ["src/**/*", ".astro/*.d.ts"]
}
