{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/wiki",
  "type": "module",
  "scripts": {
    "build": "astro build",
    "clean:build": "git clean -xdf .cache .astro .wrangler",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "deploy": "wrangler pages deploy --project-name portfolio-wiki-x6z33n --branch master",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "fmt:md": "remark . --output",
    "fmt:md:check": "remark . --quiet",
    "generate": "wrangler types",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "lint:md": "markdownlint-cli2 .",
    "lint:md:fix": "markdownlint-cli2 --fix .",
    "lint:textlint": "textlint .",
    "lint:textlint:fix": "textlint --fix .",
    "studio": "astro dev --port 23000",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/cloudflare": "12.2.1",
    "@astrojs/react": "3.6.2",
    "@astrojs/starlight": "0.31.1",
    "@portfolio/ui": "workspace:*",
    "@portfolio/validation": "workspace:*",
    "astro": "5.1.5",
    "astro-mermaid": "1.0.0",
    "hast-util-to-string": "3.0.1",
    "mermaid": "11.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sharp": "0.33.5",
    "unist-util-visit": "5.0.0",
    "zod": "4.3.4"
  },
  "devDependencies": {
    "@portfolio/auth": "workspace:*",
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/db": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@proofdict/textlint-rule-proofdict": "3.1.2",
    "markdownlint-cli2": "0.20.0",
    "remark-cli": "12.0.1",
    "remark-frontmatter": "5.0.0",
    "remark-preset-lint-markdown-style-guide": "6.0.1",
    "remark-stringify": "11.0.0",
    "textlint": "15.5.0",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-rule-ja-hiragana-daimeishi": "1.0.0",
    "textlint-rule-ja-hiragana-fukushi": "1.3.0",
    "textlint-rule-ja-hiragana-hojodoushi": "1.1.0",
    "textlint-rule-ja-hiragana-keishikimeishi": "1.1.0",
    "textlint-rule-ja-no-orthographic-variants": "2.0.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "1.0.1",
    "textlint-rule-preset-ja-technical-writing": "12.0.2",
    "textlint-rule-preset-jtf-style": "3.0.3",
    "textlint-rule-spellcheck-tech-word": "5.0.0",
    "typescript": "5.9.3",
    "wrangler": "4.54.0"
