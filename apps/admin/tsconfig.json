{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/base.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "paths": {
            "~/*": ["./app/*"]
