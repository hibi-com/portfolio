{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/base.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "paths": {
            "~/*": ["./app/*"]
        },
        "types": ["vitest/globals"]
    },
    "exclude": ["node_modules", "build", "dist", ".tanstack", "functions", "../../packages/api/dist/generated"],
    "include": ["app/**/*", "integration/**/*", "env.d.ts", "vite.config.ts", "vitest.d.ts"]
}
