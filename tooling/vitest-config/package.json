{
  "private": true,
  "version": "2.0.0",
  "name": "@portfolio/vitest-config",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "import": "./dist/env.js",
      "require": "./dist/env.js"
    },
    "./mocks": {
      "types": "./dist/mocks.d.ts",
      "import": "./dist/mocks.js",
      "require": "./dist/mocks.js"
    },
    "./msw": {
      "types": "./dist/msw.d.ts",
      "import": "./dist/msw.js",
      "require": "./dist/msw.js"
    },
    "./render": {
      "types": "./dist/render.d.ts",
      "import": "./dist/render.js",
      "require": "./dist/render.js"
    },
    "./setup": {
      "types": "./dist/setup.d.ts",
      "import": "./dist/setup.js",
      "require": "./dist/setup.js"
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts ./src/env.ts ./src/mocks.ts ./src/msw.ts ./src/render.tsx ./src/setup.ts --outdir dist --target node --format esm --splitting --external react --external react-dom --external vite --external vitest --external lightningcss --external @vitejs/* --external @portfolio/testing-msw --external @testing-library/* --external msw --external jsdom --external vite-tsconfig-paths --external react-router --external dotenv --external regenerator-runtime",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "dev": "bun run build:js --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@portfolio/testing-msw": "workspace:*",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@testing-library/user-event": "14.6.1",
    "dotenv": "17.2.3",
    "jsdom": "27.4.0",
    "react-router": "7.11.0",
    "regenerator-runtime": "0.14.1",
    "vite": "6.1.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "3.2.4"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/node": "25.0.3",
    "@vitejs/plugin-react": "5.1.2",
    "typescript": "5.9.3"
  }
}
