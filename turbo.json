{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "globalEnv": ["NODE_OPTIONS"],
    "tasks": {
        "@portfolio/api#build": {
            "dependsOn": ["@portfolio/api#generate", "^build"],
            "outputs": ["dist/**"]
        },
        "@portfolio/cms#build": {
            "dependsOn": ["^build"],
            "outputs": [".wrangler/**"]
        },
        "@portfolio/db#generate": {
            "cache": false,
            "dependsOn": ["@portfolio/prisma-markdown#build", "^build"]
        },
        "@portfolio/infra#generate": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "env": ["NODE_OPTIONS"],
            "inputs": ["src/**", "cmd/**", "generated/**", "generators/**", "tsconfig.json", "package.json"],
            "outputs": ["dist/**", "bin/**", "build/**", ".wrangler/**"]
        },
        "build:js": {
            "dependsOn": ["^build:js"],
            "inputs": ["src/**", "cmd/**", "generated/**", "generators/**"],
            "outputs": ["dist/**/*.js"]
        },
        "build:types": {
            "dependsOn": ["^build:types"],
            "inputs": ["src/**", "tsconfig.json"],
            "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"]
        },
        "build:ui": {
            "cache": true
        },
        "clean": {
            "dependsOn": ["clean:build", "clean:cache", "clean:pkg"]
        },
        "clean:build": {
            "cache": false
        },
        "clean:cache": {
            "cache": false
        },
        "clean:pkg": {
            "cache": false
        },
        "coverage": {
            "dependsOn": ["^build"],
            "env": ["NODE_ENV", "CI"]
        },
        "deploy": {
            "dependsOn": ["^build"]
        },
        "e2e": {
            "dependsOn": ["^build"],
            "env": ["NODE_ENV", "CI"]
        },
        "fmt": {
            "cache": true
        },
        "fmt:check": {
            "cache": true
        },
        "generate": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "integration": {
            "dependsOn": ["^build"],
            "env": ["NODE_ENV", "CI"]
        },
        "lint": {
            "cache": true
        },
        "lint:fix": {
            "cache": true
        },
        "studio": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["^build"],
            "env": ["NODE_ENV", "CI"]
        },
        "typecheck": {
            "dependsOn": ["^build", "^typecheck"]
        }
    }
}
