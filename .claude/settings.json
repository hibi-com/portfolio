{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "language": "日本語（明るく元気、絵文字あり）",
    "spinnerVerbs": {
        "mode": "replace",
        "verbs": [
            "モゾモゾ",
            "ざわ…ざわ",
            "もじもじ",
            "うねうね",
            "ピロピロピロ",
            "うにょにょーん",
            "ぱやぱや",
            "はわわわ"
        ]
    },
    "permissions": {
        "allow": [
            "Read(*)",
            "Bash(mkdir:*)",
            "Bash(touch:*)",
            "Bash(ls:*)",
            "Bash(tree:*)",
            "Bash(mv:*)",
            "Bash(cp:*)",
            "Bash(cat:*)",
            "Bash(grep:*)",
            "Bash(find:*)",
            "Bash(echo:*)",
            "Bash(which:*)",
            "Bash(pwd:*)",
            "Bash(head:*)",
            "Bash(tail:*)",
            "Bash(wc:*)",
            "Bash(sort:*)",
            "Bash(uniq:*)",
            "Bash(diff:*)",
            "Bash(git status:*)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git switch:*)",
            "Bash(git add:*)",
            "Bash(git commit:*)",
            "Bash(git pull:*)",
            "Bash(git fetch:*)",
            "Bash(git merge:*)",
            "Bash(git stash:*)",
            "Bash(git restore:*)",
            "Bash(git show:*)",
            "Bash(gh: run:*)",
            "Bash(gh: pr view:*)",
            "Bash(docker build:*)",
            "Bash(docker ps:*)",
            "Bash(docker logs:*)",
            "Bash(docker images:*)",
            "Bash(docker exec:*)",
            "Bash(docker start:*)",
            "Bash(docker restart:*)",
            "Bash(bun:*)",
            "WebSearch",
            "WebFetch"
        ],
        "deny": [
            "Bash(git tag:*)",
            "Bash(git rebase:*)",
            "Bash(git reset:*)",
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(git clean -fd:*)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)",
            "Bash(chmod 777:*)",
            "Bash(docker push:*)",
            "Bash(docker run:*)",
            "Bash(docker system prune:*)",
            "Read(.env)",
            "Read(.env.*)",
            "Read(./secrets/**)",
            "Read(*.pem)",
            "Read(*.key)",
            "Read(*credentials*)"
        ]
    },
    "includeCoAuthoredBy": false,
    "statusLine": {
        "type": "command",
        "command": "~/.claude/statusline.sh"
    },
    "hooks": {
        "SessionStart": [
            {
                "matcher": "startup",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/load-project-context.sh",
                        "statusMessage": "プロジェクトコンテキストを読み込み中..."
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block-dangerous-commands.sh",
                        "statusMessage": "コマンドを検証中..."
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-on-save.sh",
                        "timeout": 30,
                        "async": true
                    }
                ]
            }
        ],
        "PermissionRequest": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay /System/Library/Sounds/Glass.aiff"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay /System/Library/Sounds/Ping.aiff"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "permission_prompt",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"許可待ち\" with title \"Claude Code\"'"
                    }
                ]
            },
            {
                "matcher": "idle_prompt",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"アイドル状態\" with title \"Claude Code\"'"
                    }
                ]
            }
        ]
    }
}
