{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/api",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./generated/api": {
      "types": "./dist/generated/api.schemas.d.ts",
      "import": "./dist/generated/api.schemas.js",
      "require": "./dist/generated/api.schemas.js"
    },
    "./generated/mutator": {
      "types": "./dist/generated/mutator.d.ts",
      "import": "./dist/generated/mutator.js",
      "require": "./dist/generated/mutator.js"
    },
    "./generated/portfolios/portfolios": {
      "types": "./dist/generated/portfolios/portfolios.d.ts",
      "import": "./dist/generated/portfolios/portfolios.js",
      "require": "./dist/generated/portfolios/portfolios.js"
    },
    "./generated/posts/posts": {
      "types": "./dist/generated/posts/posts.d.ts",
      "import": "./dist/generated/posts/posts.js",
      "require": "./dist/generated/posts/posts.js"
    }
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts ./generated/api.schemas.ts ./generated/mutator.ts ./generated/portfolios/portfolios.ts ./generated/posts/posts.ts --outdir dist --target browser --format esm --external axios",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:ui": "redoc-cli bundle openapi.yaml --output ../../apps/wiki/reference/index.html",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "coverage": "vitest run --coverage",
    "dev": "bun run build:js --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "tsp compile schema/api.tsp && orval",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "studio": "redoc-cli serve openapi.yaml --port 28080",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "1.7.9"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "@redocly/cli": "1.20.0",
    "@typespec/compiler": "1.7.0",
    "@typespec/http": "1.7.0",
    "@typespec/openapi3": "1.7.0",
    "orval": "7.17.2",
    "redoc-cli": "0.13.21",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
