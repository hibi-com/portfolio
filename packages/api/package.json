{
  "private": true,
  "version": "2.0.0",
  "name": "@portfolio/api",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    },
    "./generated/api": {
      "types": "./dist/generated/api.schemas.d.ts",
      "import": "./dist/generated/api.schemas.js",
      "require": "./dist/generated/api.schemas.js"
    },
    "./generated/chats/chats": {
      "types": "./dist/generated/chats/chats.d.ts",
      "import": "./dist/generated/chats/chats.js",
      "require": "./dist/generated/chats/chats.js"
    },
    "./generated/customers/customers": {
      "types": "./dist/generated/customers/customers.d.ts",
      "import": "./dist/generated/customers/customers.js",
      "require": "./dist/generated/customers/customers.js"
    },
    "./generated/deals/deals": {
      "types": "./dist/generated/deals/deals.d.ts",
      "import": "./dist/generated/deals/deals.js",
      "require": "./dist/generated/deals/deals.js"
    },
    "./generated/emails/emails": {
      "types": "./dist/generated/emails/emails.d.ts",
      "import": "./dist/generated/emails/emails.js",
      "require": "./dist/generated/emails/emails.js"
    },
    "./generated/inquiries/inquiries": {
      "types": "./dist/generated/inquiries/inquiries.d.ts",
      "import": "./dist/generated/inquiries/inquiries.js",
      "require": "./dist/generated/inquiries/inquiries.js"
    },
    "./generated/leads/leads": {
      "types": "./dist/generated/leads/leads.d.ts",
      "import": "./dist/generated/leads/leads.js",
      "require": "./dist/generated/leads/leads.js"
    },
    "./generated/mutator": {
      "types": "./dist/generated/mutator.d.ts",
      "import": "./dist/generated/mutator.js",
      "require": "./dist/generated/mutator.js"
    },
    "./generated/pipelines/pipelines": {
      "types": "./dist/generated/pipelines/pipelines.d.ts",
      "import": "./dist/generated/pipelines/pipelines.js",
      "require": "./dist/generated/pipelines/pipelines.js"
    },
    "./generated/portfolios/portfolios": {
      "types": "./dist/generated/portfolios/portfolios.d.ts",
      "import": "./dist/generated/portfolios/portfolios.js",
      "require": "./dist/generated/portfolios/portfolios.js"
    },
    "./generated/posts/posts": {
      "types": "./dist/generated/posts/posts.d.ts",
      "import": "./dist/generated/posts/posts.js",
      "require": "./dist/generated/posts/posts.js"
    },
    "./generated/zod": {
      "types": "./dist/generated/zod/index.d.ts",
      "import": "./dist/generated/zod/index.js",
      "require": "./dist/generated/zod/index.js"
    }
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts ./generated/api.schemas.ts ./generated/mutator.ts ./generated/portfolios/portfolios.ts ./generated/posts/posts.ts ./generated/customers/customers.ts ./generated/leads/leads.ts ./generated/deals/deals.ts ./generated/pipelines/pipelines.ts ./generated/inquiries/inquiries.ts ./generated/chats/chats.ts ./generated/emails/emails.ts ./generated/zod/index.ts --outdir dist --target browser --format esm --external axios --external zod",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:ui": "redoc-cli bundle openapi.yaml --output ../../apps/wiki/reference/index.html",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "coverage": "vitest run --coverage",
    "dev": "bun run build:js --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "tsp compile schema/api.tsp && orval && bun run generate:zod",
    "generate:zod": "openapi-zod-client openapi.yaml -o generated/zod/schemas.ts && bun run scripts/export.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "studio": "redoc-cli serve openapi.yaml --port 28080",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "1.7.9"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "@redocly/cli": "1.20.0",
    "@typespec/compiler": "1.7.0",
    "@typespec/http": "1.7.0",
    "@typespec/openapi3": "1.7.0",
    "openapi-zod-client": "1.18.2",
    "orval": "7.17.2",
    "redoc-cli": "0.13.21",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "zod": "4.3.4"
  }
}
