{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "~/*": ["./src/*"],
            "@generated/*": ["./generated/*"]
        },
        "rootDir": ".",
        "typeRoots": ["../../node_modules/@types"],
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist", "generated/zod/schemas.ts"],
    "include": ["src/**/*.ts", "generated/**/*.ts"]
}
