{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/db",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts --outdir dist --target node --format esm --external @prisma/client",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "coverage": "vitest run --coverage",
    "dev": "bun run build:js --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "bun run with-env prisma generate",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "migrate": "prisma-migration",
    "studio": "bun run with-env prisma studio --browser none",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "with-env": "env --"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/prisma-migration": "workspace:*",
    "@portfolio/prisma-markdown": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "prisma": "5.22.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "vitest-environment-miniflare": "2.14.4"
  }
}
