{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/auth",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts --outdir dist --target node --format esm --external @portfolio/db --external better-auth --external zod",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "coverage": "vitest run --coverage",
    "dev": "bun run build:js --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "bun run with-env better-auth generate --config better.config.ts --output ../db/prisma/schema/auth.prisma --yes",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "with-env": "env --"
  },
  "dependencies": {
    "@portfolio/db": "workspace:*",
    "better-auth": "1.4.11",
    "zod": "4.3.4"
  },
  "devDependencies": {
    "@better-auth/cli": "1.4.11",
    "@cloudflare/workers-types": "4.20260101.0",
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
