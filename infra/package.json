{
  "private": true,
  "version": "1.0.0",
  "name": "@portfolio/infra",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build ./src/index.ts ./src/generators/index.ts --outdir dist --target node --format esm --splitting",
    "build:types": "git clean -xdf .cache/tsbuildinfo.json && tsc --emitDeclarationOnly --declaration --outDir dist",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "bun run dist/generators/index.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "login": "pulumi login",
    "preview": "pulumi preview",
    "refresh": "pulumi refresh",
    "select": "pulumi stack select",
    "typecheck": "tsc --noEmit",
    "up": "pulumi up"
  },
  "dependencies": {
    "@pulumi/cloudflare": "6.13.0",
    "@pulumi/command": "1.1.3",
    "@pulumi/pulumi": "3.142.0",
    "@pulumi/random": "4.16.7",
    "dotenv": "16.4.5",
    "@pulumiverse/grafana": "2.19.0",
    "@pulumiverse/sentry": "0.0.9",
    "@rediscloud/pulumi-rediscloud": "1.3.3"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/node": "25.0.3",
    "tsx": "4.19.2",
    "typescript": "5.9.3"
  },
  "pulumi": {
    "main": "dist/index.js"
  }
}
