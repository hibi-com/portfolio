{
  "private": true,
  "version": "2.0.0",
  "name": "@portfolio/scripts-workspace",
  "type": "module",
  "scripts": {
    "build": "bun run build:js",
    "build:js": "bun build cmd/main.ts --outfile bin/main.js --target bun --format esm --external bun --minify && chmod +x bin/main.js",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "start": "node ./bin/main.js",
    "test": "E2E_TEST=true vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/bun": "1.3.5",
    "@types/node": "25.0.3",
    "cac": "6.7.14",
    "picocolors": "1.1.1",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "bin": {
    "workspace": "./bin/main.js"
  }
}
