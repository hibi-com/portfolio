{
  "private": true,
  "version": "1.0.0",
  "name": "@portfolio/scripts-changeset",
  "type": "module",
  "scripts": {
    "build": "bun run build:js",
    "build:js": "bun build cmd/main.ts --outfile bin/main.js --target bun --format esm --minify && chmod +x bin/main.js",
    "clean:cache": "git clean -xdf .cache .turbo",
    "clean:pkg": "git clean -xdf node_modules dist",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "start": "bun run cmd/main.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/bun": "1.3.5",
    "@types/node": "25.0.3",
    "cac": "6.7.14",
    "enquirer": "2.4.1",
    "fast-glob": "3.3.3",
    "picocolors": "1.1.1",
    "typescript": "5.9.3"
  },
  "bin": {
    "changeset-jp": "./bin/main.js",
    "changeset": "./bin/main.js"
  }
}
